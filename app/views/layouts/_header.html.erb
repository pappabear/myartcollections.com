<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation-demo">
  <div class="container">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a href="/">
        <div class="logo-container">
          <div class="logo">
            <img src="/PaperKitPro/assets/img/logo/logo-57x57.png" alt="<%= APP_NAME %>" />
          </div>
          <div class="brand" style="font-size: 2em; padding-top: 10px; width:400px">
            <%= APP_NAME %>
          </div>
        </div>
      </a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-right">

        <% if logged_in? %>
            <li class="dropdown">
              <button href="#" class="dropdown-toggle btn" data-toggle="dropdown">My Account <b class="caret"></b></button>
              <ul class="dropdown-menu dropdown-menu-right">
                <li><%= link_to "My Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Log out", logout_path, method: :delete %>
                </li>
              </ul>
            </li>
        <% else %>
            <li><%= link_to "Sign In", login_path, class:'btn btn-success' %></li>
        <% end %>

      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-->
</nav>

<!-- login modal -->
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-hidden="false">
  <div class="modal-dialog modal-medium modal-register">
    <div class="modal-content">
      <div class="modal-header no-border-header text-center">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h6 class="text-muted">Welcome</h6>
        <h3 class="modal-title"><%= APP_NAME %></h3>
        <p>Sign in to your account</p>
      </div>
      <div class="modal-body">

        <%= form_for(:session, url: login_path) do |f| %>

            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, class: 'form-control border-input' %>
            </div>

            <div class="form-group">
              <%= f.label :password %>
              <%= link_to "(forgot password)", new_password_reset_path %>
              <%= f.password_field :password, class: 'form-control border-input' %>
            </div>

            <%= f.label :remember_me, class: "checkbox inline" do %>
                <%= f.check_box :remember_me, {"data-toggle"=>"checkbox"}, true %>
                <span>Remember me on this computer</span>

            <% end %>

            <%= f.submit "Log in", class: "btn btn-fill btn-block btn-success" %>
        <% end %>

      </div>
      <div class="modal-footer no-border-footer">
        <span class="text-muted">Looking to <%= link_to "create an account", signup_path %> ?</span>
      </div>
    </div>
  </div>
</div>
<!-- end login modal -->
