<% provide(:title, 'Sign up') %>


<%= render partial: "shared/error_messages", locals: {object: @user} %>

<div class="background">
  <div class="filter-black"></div>
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1 ">
        <div>
          <h3 class="title">Sign up</h3>

          <%= form_for(@user) do |f| %>

              <div class="form-group <%= "has-error".html_safe unless @user.errors[:name].blank? %>">
                <%= f.label :name %>
                <%= f.text_field :name, class: 'form-control border-input' %>
              </div>

              <div class="form-group <%= "has-error".html_safe unless @user.errors[:email].blank? %>">
                <%= f.label :email %>
                <%= f.email_field :email, class: 'form-control border-input' %>
              </div>

              <div class="form-group <%= "has-error".html_safe unless @user.errors[:password].blank? %>">
                <%= f.label :password %>
                <%= f.password_field :password, class: 'form-control border-input' %>
              </div>

              <div class="form-group <%= "has-error".html_safe unless @user.errors[:password_confirmation].blank? %>">
                <%= f.label :password_confirmation, "Confirmation" %>
                <%= f.password_field :password_confirmation, class: 'form-control border-input' %>
              </div>

              <%= f.submit "Create my account", class: "btn btn-fill btn-block btn-success" %>
          <% end %>

        </div>
      </div>
    </div>
  </div>

  <div class="demo-footer text-center">
    <p>&nbsp;</p>

    <p>Already registered? <%= link_to "Sign in", login_path %></p>

    <p>&nbsp;</p>

    <p>&nbsp;</p>

    <p>&nbsp;</p>
  </div>
</div>
