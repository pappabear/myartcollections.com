<% provide(:title, 'Log in') %>

<div class="background">
  <div class="filter-black"></div>
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1 ">
        <div>
          <h3 class="title">Login</h3>
          <%= form_for(:session, url: login_path) do |f| %>

              <div class="form-group">
                <%= f.label :email %>
                <%= f.email_field :email, class: 'form-control border-input' %>
              </div>

              <div class="form-group">
                <%= f.label :password %>
                <%= link_to "(forgot password)", new_password_reset_path %>
                <%= f.password_field :password, class: 'form-control border-input' %>
              </div>

              <%= f.label :remember_me, class: "checkbox inline" do %>
                  <%= f.check_box :remember_me, {"data-toggle"=>"checkbox"}, true %>
                  <span>Remember me on this computer</span>

              <% end %>

              <%= f.submit "Sign in", class: "btn btn-fill btn-block btn-success" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="demo-footer text-center">
    <p>&nbsp;</p>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
    <p>&nbsp;</p>
    <p>&nbsp;</p>
    <p>&nbsp;</p>
  </div>
</div>


